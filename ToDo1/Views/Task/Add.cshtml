@model ToDo1.Models.TaskModel

@{
    ViewData["Title"] = "Edit Task";
}

<div class="text-center">
    <h1 class="display-4">Edit Task</h1>
</div>


<form asp-action = "Edit">
    <div asp-validation-summary = "ModelOnly" class = "text-danger"></div>
        <div class = "form-group">
            <label asp-for = "Description" class = "control-label">Description</label>
            <input asp-for = "Description" class = "form-control" />
            <span asp-validation-for = "Description" class = "text-danger"></span>
        </div>
        <div class = "form-group">
            <label asp-for = "DueDate" class = "control-label">Due Date</label>
            <input type = "date" asp-for = "DueDate" class = "form-control" />
            <span asp-validation-for = "DueDate" class = "text-danger"></span>
        </div>
        <div class = "form-group mt-4">
            <input type = "submit" value = "Add" class = "btn btn-primary w-100" />
        </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}